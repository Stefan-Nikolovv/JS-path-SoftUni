



    <section class="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{publication.title}}</h2>
                <h3>Author: {{publication.author}}</h3>
                <h3>Stars: {{publication.stars}}</h3>
                <h3>Genre: {{publication.genre}}</h3>
                <h3>Review: {{publication.bookReview}}
                </h3>
                {{#if user}}
                <div class="buttons">
                    <!-- Only for registered user and author of the review -->
                    {{#if isOwner}}
                    <a href="/publication/{{publication._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/publication/{{publication._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                    <!-- logged in user who has not yet wished book-->
                    {{#if isRead}}
                    <p class="wish-pub">You already added the book to your wish list</p>
                    <!-- logged in user who has already wished book-->
                    {{else}}
                    
                    <a href="/publication/{{publication._id}}/wish" class="btn-wish">Wish to read</a>
                    {{/if}}
                    {{/if}}
                        
                    
                    
                    
                </div>
                {{/if}}
            </article>

            <article class="details-card-image">
                <img src="{{publication.imageUrl}}">
            </article>

        </article>
    </section>