
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}

    <section class="edit-form-container">

        <form method="post">
            <h3>Edit Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" value="{{title}}" id="title">
            <label>Author</label>
            <input type="text" name="author" class="box" value="{{author}}" id="author">
            <label>Genre</label>
            <input type="text" name="genre" class="box" value="{{genre}}" id="genre">
            <label>Stars</label>
            <input type="number" name="stars" class="box" value="{{stars}}" id="stars">
            <label>Image</label>
            <input type="text" name="imageUrl" class="box" id="imageUrl" value="{{imageUrl}}">
            <label>Review</label>
            <textarea class="box"
                name="bookReview">{{bookReview}}</textarea>
            <input type="submit" value="Edit" class="btn">
        </form>
    </section>


